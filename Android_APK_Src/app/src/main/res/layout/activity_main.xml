<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/footer"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:shrinkColumns="1">

                <Button
                    android:id="@+id/scan_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/scan" />

                <TableRow
                    android:id="@+id/tableRow0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/scan_format"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:transitionName="FORMAT _ Valid:"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/scan_format_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Kassen_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:transitionName="Kassen-ID:"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Kassen_ID_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Belegnummer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:transitionName="Belegnummer:"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Belegnummer_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Beleg_Datum_Uhrzeit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:transitionName="Beleg-Datum-Uhrzeit:"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Beleg_Datum_Uhrzeit_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Betrag_Satz_Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:transitionName="Betrag-Satz-Normal:"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Betrag_Satz_Normal_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Betrag_Satz_Ermaessigt_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:transitionName="Betrag-Satz-Ermaessigt-1:"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Betrag_Satz_Ermaessigt_1_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Betrag_Satz_Ermaessigt_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Betrag_Satz_Ermaessigt_2_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Betrag_Satz_Null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Betrag_Satz_Null_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Betrag_Satz_Besonders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Betrag_Satz_Besonders_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Stand_Umsatz_Zaehler_AES256_ICM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Stand_Umsatz_Zaehler_AES256_ICM_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Stand_Umsatz_Zaehler_AES256_ICM_unver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Stand_Umsatz_Zaehler_AES256_ICM_unver_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Zertifikat_Seriennummer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Zertifikat_Seriennummer_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Sig_Voriger_Beleg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Sig_Voriger_Beleg_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Signaturwert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/Signaturwert_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textIsSelectable="true" />
                </TableRow>
                <Button
                    android:id="@+id/choose_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/choose" />

                <TextView
                    android:id="@+id/CryptoFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/CryptoFile_String"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/CryptoFile_Path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/Read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textIsSelectable="true" />

            </TableLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:weightSum="100">

        <TextView
            android:id="@+id/Counter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textIsSelectable="true" />

        <ImageButton
            android:id="@+id/save_button"

            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="31"
            android:src="@drawable/save" />

        <ImageButton
            android:id="@+id/undo_button"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="31"
            android:src="@drawable/undo" />

        <ImageButton
            android:id="@+id/email_button"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="31"
            android:src="@drawable/mail" />
    </LinearLayout>
</RelativeLayout>
